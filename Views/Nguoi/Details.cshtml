@model HemisCB.Models.TbNguoi

@{
    ViewData["Title"] = "Delete";
}

@section Heads {
    <style>
        a:visited, a:hover, a:link {
            color: inherit;
            text-decoration: none;
        }
        .content-container {
            display: grid;
            grid-template-columns: 45% 45%;
            gap: 20px;
        }
        dt {
            color: #444;
        }
        dd {
            color: #555;
        }
    </style>
}
