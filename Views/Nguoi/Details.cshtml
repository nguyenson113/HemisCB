    <div class="col-lg-8 p-lg-5 bg-light shadow-lg rounded-3">
        <div class="container bg-white shadow rounded-3 p-lg-4">
            <div class="text-center">
            <h1>Thông Tin chi tiết</h1>
            <hr />
            </div>
            <dl class="content-container">
                <dt>
                  Họ: 
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Ho)
                </dd>
                <dt>
                    Tên: 
                </dt>
